{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
